
<div id="form">
    <br>
  <h2>Login</h2>
  <br><br><br>
  <form action="/login" method="POST">
    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" />
    </label>
    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>
    <button type="submit">Login</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>